// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma3-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
    id        Int         @id  @default(autoincrement())
    email     String      @unique
    name      String
    age       Int
    city      String?
    password  String
    avatar    String?
    status    Boolean?     @default(false)
    TokenPair TokenPair[]
}

model TokenPair {
  id           Int    @id @default(autoincrement())
  accessToken  String
  refreshToken String
  author       User?  @relation(fields: [authorId], references: [id])
  authorId     Int?   @unique
}
